@model IEnumerable<SCF.Models.Conveniado>

@{
    ViewBag.Title = "Visualizar Conveniados";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="form-group">
            <div class="col-sm-4">
                <h3>Visualizar Conveniados</h3>
            </div>
            <div class="col-sm-4 col-sm-offset-4" style="padding-top: 18px">
                @Html.ActionLink("Novo Conveniado", "Create", null, new { @class = "btn btn-primary pull-right" })
            </div>
        </div>
    </div>

    <div class="table-responsive" style="margin-top: 20px;">
        <table id="tabelaContaReceber" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Matricula)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.CPF)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Matricula)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CPF)
                        </td>

                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Visualizar", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>
